doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  script(src='/scripts/jquery.js')
  link(rel='stylesheet' href='/css/index.css')
input#display(type='hidden' readonly='' value= display)
.nav 
 select#selection(name="select") 
  option(value="numbers" selected=select1) numbers
  option(value="words" selected=select2) words
.main
 .container#words
   h1#title2  For Worded Problems:
   form(action='/api/answer2' method='post')
     label First: 
     br
     input#problem1(type='text' name='problem1')
     br
     br
     label Operator: 
     br
     select#operator(name='operator')
       option(value='add') add
       option(value='sub') sub
       option(value='mul') mul
       option(value='div') div
     br
     br
     label Second: 
     br
     input#problem2(type='text' name='problem2')
     br
     br
     button#submit2 Submit
   h1  Answer 2: 
   br
   input#answer2(type='text' readonly='' value= answer2)
   br
   br
   button#copy2 Copy
   span#myTooltip2
script.
  $(document).ready(function (){
  let copy1 = $("#answer1").val()
  let copy2 = $("#answer2").val()
  $("#copy1").on('click' ,function () {
      var copyText = $("#answer1").val()
      navigator.clipboard.writeText(copyText)
      var tooltip = $("#myTooltip1");
      tooltip.html("Copied: " + copyText)
      tooltip.fadeOut(1000)
  })
  $("#copy2").on('click', function () {
      var copyText = $("#answer2").val()
      navigator.clipboard.writeText(copyText)
      var tooltip = $("#myTooltip2");
      tooltip.html("Copied: " + copyText)
      tooltip.fadeOut(1000)
  })
  $('#selection').on('change', function (){
    window.location = window.location.origin + "/options?display=" + $(this).val() 
  })
  })
